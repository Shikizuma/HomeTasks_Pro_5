        <Label Content="FontSize:" HorizontalAlignment="Left" Margin="13,135,0,0" VerticalAlignment="Top" FontSize="20" RenderTransformOrigin="0.377,0.481"/>
        <CheckBox x:Name="VisibleCheckBox" Content="VisibleButton" HorizontalAlignment="Center"  FontSize="22" VerticalContentAlignment="Center" VerticalAlignment="Top" Margin="0,277,0,0"/>
        <CheckBox x:Name="InvisibleCheckBox" Content="InvisibleButton" HorizontalAlignment="Center"  FontSize="22" VerticalContentAlignment="Center" VerticalAlignment="Top" Margin="0,235,0,0"/>
        <xctk:ColorPicker Name="ClrPcker_Background" Margin="108,185,21,0" VerticalAlignment="Top" Height="37" SelectedColorChanged="ColorPicker_SelectedColorChanged"/>
        <Button x:Name="ConfirmSettingsButton" Content="Confirm" HorizontalAlignment="Center" Margin="0,322,0,0" VerticalAlignment="Top" Width="120" Height="40" FontSize="20" Click="ConfirmSettingsButton_Click"/>
    </Grid>
</Window>
